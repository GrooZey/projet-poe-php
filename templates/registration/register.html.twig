{% extends 'base.html.twig' %}

{% block title %}Créez votre compte{% endblock %}

{% block body %}

<header class="header">
    <nav class="nav-signup">
        <a href="/">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-fill" viewBox="0 0 16 16" style="height: 5rem; width: 5rem; color: white;">
                <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383z"/>
            </svg>
        </a>
    </nav>
</header>

<main class="main">
    <section class="intro">
        <div class="title-intro">
            <a href="/">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16" style="height: 4rem; width: 4rem; color: white; padding-right: 2rem">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                </svg>
            </a>
            <h1 class="first-heading">Créez votre compte</h1>
        </div>
        <form class="form">

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}

            {{ form_widget(registrationForm.username, {"attr": {
            "class": "input",
            "placeholder": "Entrez un pseudo..."
            }}) }}

            {{ form_widget(registrationForm.email, {"attr": {
            "class": "input",
            "placeholder": "Entrez un email..."
            }}) }}

            {{ form_widget(registrationForm.plainPassword.first, {"attr": {
            "class": "input",
            "placeholder": "Entrez un mot de passe..."
            }}) }}

            {{ form_widget(registrationForm.plainPassword.second, {"attr": {
            "class": "input",
            "placeholder": "Confirmez votre mot de passe..."
            }}) }}

            <button type="submit" class="button">Valider</button>

            {{ form_end(registrationForm) }}
            
        </form>
    </section>
</main>

{% endblock %}
